{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "types": ["jest"],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css"]
      }
    ]
  },
  "include": [
    "../common-styles/src/emotion.d.ts",
    "src/**/*",
    "src/**/*.spec.js",
    "src/**/*.json",
    "@types/*",
    "utils/**/*",
    ".storybook/*",
    "jest.setup.ts"
  ]
}
